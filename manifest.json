{
	"manifest_version": 2,
	"name": "My Block",
	"version": "1.0",
	"author": "I",
	"description": "Block Something",
	"icons": {
		"16": "yandex_zen_stop_16x16.png",
		"48": "yandex_zen_stop_48x48.png"
	},
	"permissions": [
		"tabs",
		"<all_urls>",
		"webRequest",
        "webRequestBlocking",
        "http://*/*",
        "activeTab"
	],
	"background": {
        "persistent": true,
        "scripts": ["background.js"]
    },
	"browser_action": {
		"default_title": "Block baners",
		"default_icon": "yandex_zen_stop_48x48.png"
	}
}